<group name="ossec,">
  <rule id="502" level="3" overwrite="yes">
    <if_sid>500</if_sid>
    <options>no_email_alert</options>
    <match>Ossec started</match>
    <description>Ossec server started.</description>
  </rule>
</group>

<var name="BAD_WORDS">core_dumped|failure|error|attack|bad |illegal |denied|refused|unauthorized|fatal|failed|Segmentation Fault|Corrupted</var>
<group name="syslog,errors,">
  <rule id="1002" level="2" overwrite="yes">
    <match>$BAD_WORDS</match>
    <options>no_email_alert</options>
    <description>Unknown problem somewhere in the system.</description>
  </rule>
  <rule id="100013" level="0">
    <if_sid>1003</if_sid>
    <regex>GET /sessions/openid_callback.*control.coupahost.com</regex>
    <description>Ignore Syslog "Size Too Large" error for CoupaControl login</description>
  </rule>
  <rule id="100015" level="0">
    <if_sid>1003</if_sid>
    <program_name>RightLink</program_name>
    <description>Ignore RightLink(RightScale) "too large" syslog messsages</description>
  </rule>
</group>

