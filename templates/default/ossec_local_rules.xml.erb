<group name="syslog,sudo">
  <rule id="5403" level="4" overwrite="yes">
    <if_sid>5400</if_sid>
    <options>no_email_alert</options>
    <if_fts></if_fts>
    <description>First time user executed sudo.</description>
  </rule>                  
</group>

<group name="syslog,sshd,">
  <rule id="5712" level="10" frequency="6" timeframe="120" ignore="60" overwrite="yes">
    <if_matched_sid>5710</if_matched_sid>
    <options>no_email_alert</options>
    <description>SSHD brute force trying to get access to </description>
    <description>the system.</description>
    <group>authentication_failures,</group>
  </rule>

  <rule id="5706" level="1" overwrite="yes">
    <if_sid>5700</if_sid>
    <match>Did not receive identification string from</match>
    <description>SSH insecure connection attempt (scan).</description>
    <group>recon,</group>
  </rule>
</group>

<group name="syslog,fts,">
  <rule id="10100" level="4" overwrite="yes">
    <if_group>authentication_success</if_group>
    <options>no_email_alert</options>
    <if_fts></if_fts>
    <group>authentication_success</group>
    <description>First time user logged in.</description>
  </rule>
</group>

