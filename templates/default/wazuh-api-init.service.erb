#!/bin/sh
# WAZUH API Service
# Author: Wazuh

### BEGIN INIT INFO
# Provides:          wazuh_api
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Should-Start:      $network
# Should-Stop:       $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Wazuh API
# Description:       Wazuh API daemon
#
### END INIT INFO

# Instructions:
#  sudo install -m 755 -o root -g root /var/ossec/api/scripts/wazuh-api /etc/init.d/
#  sudo systemctl enable wazuh-api
#  sudo systemctl daemon-reload
#  sudo systemctl restart wazuh-api


NAME="wazuh-api"
PID_PATH="/var/run/wazuh-api.pid"
BIN_DIR="/usr/bin/nodejs"
APP_PATH="/var/ossec/api/app.js"

start() {
        if [ ! -f $PID_PATH ] || [ -z "$(ps -e | egrep "^\ *$(cat /var/run/wazuh-api.pid) .* node.*")" ]; then
         echo -n $"Starting $NAME: "
         $BIN_DIR $APP_PATH &

        if [ "$?" = "0" ]; then
            echo "Success"
            echo $! > $PID_PATH
        else
            echo "Failure"
            exit 1
        fi
        fi
}

stop() {
        echo -n $"Stopping $NAME: "
        if [ -f $PID_PATH ]; then
            kill `cat $PID_PATH`
            rm $PID_PATH
            echo "Success"
        else
            echo "Failure"
            exit 1
        fi
}

case "$1" in
start)
    start
    ;;
stop)
    stop
    ;;
restart)
    stop
    start
    ;;
status)
    if [ -z $PID_PATH ]; then
        status $NAME
    else
        status -p $PID_PATH $NAME
    fi;
    ;;
*)
    echo "*** Usage: $0 {start|stop|restart|status}"
    exit 1
esac
